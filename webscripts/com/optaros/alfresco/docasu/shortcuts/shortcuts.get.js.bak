function getPreferences() {
	//var userNode = search.luceneSearch("PATH:\"/sys:system/sys:people/*\" AND @cm\:userName:\"" 
	//	+ username "\"");
	
	// TODO: handle case where user has no preferences yet.
	
	return person.childAssocs["app:configurations"][0].children[0];
}

var preferences = getPreferences();

var shortcutNodes = preferences.properties["app:shortcuts"];

var shortcuts = new Array();

for each (nodeId in shortcutNodes) {
	
	var shortcut = search.findNode("workspace://SpacesStore/" + nodeId);
	if (shortcut != undefined) {
		shortcuts.push(shortcut);
	}
}

model.shortcuts = shortcuts; 